{
  "manifest_version": 2,
  "name": "Webcam Access",
  "description": "A simple extension that requests webcam access",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "camera"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}