{
  "manifest_version": 3,
  "name": "Webcam and Microphone Access",
  "version": "1.0",
  "description": "Request access to webcam and microphone using browser action.",
  "permissions": [
    "activeTab",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Webcam and Microphone Access"
  },
  "icons": {
    "16": "icon.png"
  }
}
